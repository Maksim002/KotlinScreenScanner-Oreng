<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.login.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="#001"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="30sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/main_login"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="#E8E8E8"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/main_text_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:hint="Логин"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8E8E8"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/main_password"
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/main_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:hint="Пароль"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/main_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Показать"
                android:textColor="#FF9900"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оставатсья в сети"
        android:layout_marginTop="16dp"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="105dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="11sp"
        android:text="Входить с помощью отпечатка"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="105dp" />

    <Button
        android:id="@+id/main_enter"
        style="@style/RoundedOrangeBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Войти"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#FF9900"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/main_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="#FF9900"
        android:textSize="18sp"/>
</LinearLayout>