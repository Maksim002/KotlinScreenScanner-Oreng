<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/cardview_light_background</item>
        <item name="colorAccent">@color/orangeColor</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/design_default_color_on_primary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="RoundedOrangeBackground" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_orange_backround</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orangeColor</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF9116</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF9116
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF9116
        </item>
    </style>

    <style name="ToolBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/whiteColor</item>
        <item name="android:textColorPrimary">@color/colorDrawer</item>
        <item name="android:textColorSecondary">@color/colorDrawer</item>
        <item name="actionMenuTextColor">@color/colorDrawer</item>
    </style>
</resources>