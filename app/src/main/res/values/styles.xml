<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/cardview_light_background</item>
        <item name="colorAccent">@color/orangeColor</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/design_default_color_on_secondary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="RoundedOrangeBackground" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_orange_backround</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orangeColor</item>
    </style>

</resources>